<%- include layouts/header.ejs %>
	<div class="full-page">
		<!-- display the error message here -->
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

		<!-- submit to /login -->
		<form action="/login" method="post">
			<input type="text" value="" name="username" class="required username" id="id_username" placeholder="Usuario"
				  style="width: 237px; border-top-left-radius: 4px; border-top-right-radius: 4px; border-bottom-right-radius: 4px; border-bottom-left-radius: 4px;" required title="Por favor ingrese su usuario!"/>
			
			<input type="password" value="" name="password" class="required password" id="id_password" placeholder="Password"
				  style="idth: 237px; border-top-left-radius: 4px; border-top-right-radius: 4px; border-bottom-right-radius: 4px; border-bottom-left-radius: 4px;" required title="Por favor ingrese su password!"/>
						
			<button type="submit" name="login" value="login" class="button btn" id="mc-embedded-consultar">
				<span style="margin-top: -1px;">Login</span>
			  </button>
		</form>
	</div>
